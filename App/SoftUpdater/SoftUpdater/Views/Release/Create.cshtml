@model SoftUpdater.Contract.Model.ReleaseCreator

@{
    ViewData["Title"] = "Добавить обновление";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ClientId" class="form-control" />
            <div class="form-group">
                <label asp-for="Client" class="control-label"></label>
                <input asp-for="Client" disabled class="form-control" id="formula" />
                <span asp-validation-for="ClientId" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Path" class="control-label"></label>
                <input asp-for="Path" class="form-control" />
                <span asp-validation-for="Path" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Version" class="control-label"></label>
                <input asp-for="Version" class="form-control" />
                <span asp-validation-for="Version" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.ActionLink("Выбрать клиента", "ListSelect", "Client",
                    new { },
                    new { @class = "btn btn-dark", @id = "client_select" })
                <input type="submit" value="Добавить" class="btn btn-dark" />
                <a asp-action="Details" class="btn btn-dark">Вернуться</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script type="text/javascript">
        function setClientId(client_id, client) {
            $("#ClientId").text(client_id);
            $("#formula").text(client);
            $('#modDialog').modal('hide');
        }

        $(function () {
            $.ajaxSetup({ cache: false });
            $("#client_select").click(function (e) {
                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}
