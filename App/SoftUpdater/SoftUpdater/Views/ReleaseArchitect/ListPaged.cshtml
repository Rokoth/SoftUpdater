@model IEnumerable<SoftUpdater.Contract.Model.ReleaseArchitect>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(s => s.Id)</th>
            <th>@Html.DisplayNameFor(s => s.Name)</th>
            <th>@Html.DisplayNameFor(s => s.Path)</th>
            <th>@Html.DisplayNameFor(s => s.Release)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Path</td>
            <td>@item.Release</td>
            <td>
                @Html.ActionLink("Редактировать", "Edit", "ReleaseArchitect", new { id = item.Id }, new { @class = "btn btn-dark" })
                @Html.ActionLink("Удалить", "Delete", "ReleaseArchitect", new { id = item.Id }, new { @class = "btn btn-dark" })
            </td>
        </tr>
        }
    </tbody>
</table>
